@model TwitterQuiz.ViewModels.Quiz.EditQuizViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
@Html.HiddenFor(x => x.Id)
@Html.HiddenFor(x => x.StreamName)

<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        <h2>Create a new Quiz</h2>
        @using (Html.BeginForm("Edit", "Quiz", FormMethod.Post, new { @class = "form", id = "new-quiz" }))
        {
            @Html.Partial("_EditQuiz", @Model)
            <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
            </div>
        }
    </div>
</div>
@section Scripts
{
    <script type="text/x-handlebars" id="round-template">
        
    </script>
    <script type="text/x-handlebars" id="question-template">
        <div class="row form-stacked question-template">
            <div class="col-md-9">
                <textarea class="form-control" cols="20" id="question_Question" name="question.Question" placeholder="Question" rows="2"></textarea>
                @*{{textarea class="form-control" cols="20" name="answer" placeholder="Possible Answer" type="text" value=question}}*@
            </div>
            <div class="col-md-3 pull-right">
                <a class="btn btn-danger delete-question">
                    <i class="fa fa-trash-o"></i>
                </a>
            </div>
            <div class="answers">
                {{#each answers}}
                    {{> answer}}
                {{/each}}
            </div>
        </div>
    </script>
    <script type="text/x-handlebars" id="answer-template">
        <div class="answer-template">
            <div class="col-md-9">
                <input class="form-control" name="answer" placeholder="Possible answer" type="text" value="">
                @*{{input class="form-control" name="answer" placeholder="Possible Answer" type="text" value=answer}}*@
            </div>
            <div class="col-md-3 pull-right">
                <a class="btn btn-danger delete-answer">
                    <i class="fa fa-trash-o"></i>
                </a>
            </div>
        </div>
    </script>
    <script type="text/javascript">
        $(function () {
            $(document).on('click', '.add-question', function (e) {
                e.preventDefault();
                var source = $('#question-template').html();
                var template = Handlebars.compile(source);
                Handlebars.registerPartial("answer", $("#answer-template").html());
                var context = { question: '', answers: { answer: '' } };
                var html = template(context);
                $(this).closest('.round-template').children('.questions').append(html);
            });
            $(document).on('click', '.delete-question', function (e) {
                e.preventDefault();
                $(this).closest('.question-template').remove();
            });
            $(document).on('click', '.add-answer', function(e) {
                e.preventDefault();
                var source = $('#answer-template').html();
                var template = Handlebars.compile(source);
                var context = { answer: '' };
                var html = template(context);
                $(this).closest('.question-template').children('.answers').append(html);
            });
            $(document).on('click', '.delete-answer', function(e) {
                e.preventDefault();
                $(this).closest('.answer-template').remove();
            });
        })
    </script>
}
