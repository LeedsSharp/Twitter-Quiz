@section Scripts
{
    <script type="text/x-handlebars" id="application">
		<div class="form-group">
			<label class="control-label">Quiz Name</label>
			{{input class="form-control" placeholder="Name" type="text" value=name}}
		</div>
		<div class="form-group">
			<label class="control-label">Description</label>
			{{input class="form-control" placeholder="Description" type="text" value=description }}
		</div>
		<div class="form-group">
			<label class="control-label">Quiz Host</label>
			<p>This is the twitter account that will tweet the questions</p>
			<div class="input-group">
				<span class="input-group-addon">&#64;</span>
				{{input class="form-control" placeholder="This is the twitter account that will tweet the questions" type="text" value=host }}
			</div>
		</div>
    </script>
    <script type="text/javascript">
        $(function() {
            var App = Ember.Application.create({
                LOG_TRANSITIONS: true,
                LOG_BINDINGS: true,
                LOG_VIEW_LOOKUPS: true,
                LOG_STACKTRACE_ON_DEPRECATION: true,
                LOG_VERSION: true,
                debugMode: true
            });
            App.ApplicationRoute = Ember.Route.extend({
                model: function() {
                    var id = $('#Id').val();
                    var stream = $('#StreamName').val();
                    return Ember.$.getJSON('http://localhost:2113/streams/' + stream + '/' + id).then(function(data) {
                        return data;
                    });
                }
            });
        });
    </script>
}
