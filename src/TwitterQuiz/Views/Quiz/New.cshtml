@model TwitterQuiz.ViewModels.Quiz.NewQuizViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div class="row">
    <div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
        <h2>Create a new Quiz</h2>
        @using (Html.BeginForm("New", "Quiz", FormMethod.Post, new { @class = "form", id = "new-quiz" }))
        {
            <div class="form-group">
                @Html.LabelFor(x => x.Name, new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Name" })
                @Html.ValidationMessageFor(x => x.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Description, new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Description" })
                @Html.ValidationMessageFor(x => x.Description)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Host, new { @class = "control-label" })
                <p>This is the twitter account that will tweet the questions</p>
                <div class="input-group">
                    <span class="input-group-addon">&#64;</span>
                    @Html.TextBoxFor(x => x.Host, new { @class = "form-control", placeholder = "This is the twitter account that will tweet the questions" })
                </div>
                @Html.ValidationMessageFor(x => x.Host)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.StartDate, new { @class = "control-label" })
                @Html.EditorFor(x => x.StartDate, new { @class = "form-control", placeholder = "Time to start the quiz" })
                @Html.ValidationMessageFor(x => x.StartDate)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.FrequencyOfQuestions, new { @class = "control-label" })
                <p>Time between sending out questions in minutes</p>
                @Html.TextBoxFor(x => x.FrequencyOfQuestions, new { @class = "form-control", placeholder = "Time between sending out questions in minutes" })
                @Html.ValidationMessageFor(x => x.FrequencyOfQuestions)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.FrequencyOfAnswers, new { @class = "control-label" })
                <p>Time between sending out answers in minutes</p>
                @Html.TextBoxFor(x => x.FrequencyOfAnswers, new { @class = "form-control", placeholder = "Time between sending out answers in minutes" })
                @Html.ValidationMessageFor(x => x.FrequencyOfAnswers)
            </div>
            <div class="form-group">
                    <button type="submit" class="btn btn-default">Create</button>
            </div>
        }
    </div>
</div>
